<?xml version="1.0" encoding="UTF-8"?>
<d:CdbBasePage xmlns:d="clr-namespace:Component.DB.Views;assembly=Component.DB.Views" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Component.DB.Views.itemEditPages.AddLogEntryPage" Title="{Binding Title}">
    <ContentPage.Content>        
        <ScrollView >
            <StackLayout>
                <Label Text="Log Entry:" FontSize="Medium" />
                <Editor AutoSize="TextChanges" Text="{Binding LogEntry}"/>
                    
                <Label Text="Effective Date:" FontSize="Medium" />
                <DatePicker Date="{Binding EffectiveDate}"/>                
                
                <Button Text="Save" Clicked="HandleSaveClickedAsync"/>
            </StackLayout>
        </ScrollView>        
    </ContentPage.Content>
</d:CdbBasePage>
