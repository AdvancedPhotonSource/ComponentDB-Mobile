<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Component.DB.Views.PreferencePages.LoginPage">
    <ContentPage.Content>
         <StackLayout Spacing="20" Padding="15">
            <Label Text="Login" FontSize="Large" />
            <Label Text="Username" FontSize="Medium" />
            <Entry Text="{Binding username}" FontSize="Small" />
            <Label Text="Password" FontSize="Medium" />
            <Entry Text="{Binding password}" 
                   FontSize="Small"
                   IsPassword="true"/>
            
            <Button Text="Login"
                    Clicked="Login_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
